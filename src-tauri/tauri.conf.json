{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "PakePlus",
    "version": "../package.json",
    "identifier": "com.pakeplus.pacbao",
    "build": {
        "devUrl": "http://localhost:1420",
        "frontendDist": "../dist"
    },
    "app": {
        "security": {
            "assetProtocol": {
                "enable": true,
                "scope": {
                    "allow": [
                        "$APPCONFIG/**",
                        "$APPLOCALDATA/**",
                        "$APPCACHE/**",
                        "$APPDATA/**",
                        "$APPLOG/**",
                        "$AUDIO/**",
                        "$CACHE/**",
                        "$CONFIG/**",
                        "$DATA/**",
                        "$LOCALDATA/**",
                        "$DESKTOP/**",
                        "$DOCUMENT/**",
                        "$DOWNLOAD/**",
                        "$EXE/**",
                        "$FONT/**",
                        "$HOME/**",
                        "$PICTURE/**",
                        "$PUBLIC/**",
                        "$RUNTIME/**",
                        "$ASSETS/**",
                        "$VIDEO/**",
                        "$TEMP/**",
                        "$RESOURCE/../**",
                        "$ASSETS/**",
                        "$TEMPLATE/**",
                        "**",
                        "asset://localhost/**"
                    ],
                    "scope": [
                        "$APPCONFIG/**",
                        "$APPLOCALDATA/**",
                        "$APPCACHE/**",
                        "$APPDATA/**",
                        "$APPLOG/**",
                        "$AUDIO/**",
                        "$CACHE/**",
                        "$CONFIG/**",
                        "$DATA/**",
                        "$LOCALDATA/**",
                        "$DESKTOP/**",
                        "$DOCUMENT/**",
                        "$DOWNLOAD/**",
                        "$EXE/**",
                        "$FONT/**",
                        "$HOME/**",
                        "$PICTURE/**",
                        "$PUBLIC/**",
                        "$RUNTIME/**",
                        "$ASSETS/**",
                        "$VIDEO/**",
                        "$TEMP/**",
                        "$RESOURCE/../**",
                        "$ASSETS/**",
                        "$TEMPLATE/**",
                        "**",
                        "asset://localhost/**"
                    ],
                    "enable": true
                }
            },
            "csp": "default-src 'self' asset: 'unsafe-inline' customprotocol://* http://localhost:* ws:localhost:* 'unsafe-eval' ipc: http://ipc.localhost *; script-src 'self' https://www.googletagmanager.com 'unsafe-inline' *; connect-src 'self' http://localhost:* ws:localhost:* ipc://localhost https://api.github.com https://www.google-analytics.com https://google-analytics.com https://PakePlus.com https://PacBao.com http://ipc.localhost customprotocol://* https://www.PakePlus.com *; img-src 'self' https://avatars.githubusercontent.com https://www.googletagmanager.com asset: http://asset.localhost blob: data: http://asset.localhost *; font-src 'self' asset: http://localhost data: *;",
            "dangerousDisableAssetCspModification": true
        },
        "withGlobalTauri": true
    },
    "plugins": {
        "webview": {
            "create_webview_window": true
        },
        "updater": {
            "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEI0MkI3NDVCOUM2NDE1QTgKUldTb0ZXU2NXM1FydEsrN29Edjg2c0kxZmk1YWpRa3ZUMjE1S2NLeGVFRkJRWW1SSnhXQ2F3S0EK",
            "endpoints": [
                "https://gh-proxy.com/github.com/Sjj1024/PakePlus/releases/latest/download/ppupdate.json",
                "https://pbrivate.netlify.app/pakeplus/ppupdate.json"
            ],
            "windows": {
                "installMode": "passive"
            }
        }
    }
}
